<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im8"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/j1"
android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:fontFamily="sans-serif-black"
        android:text="MRS.SANNJIVI AND NANA DESAI"
        android:textColor="@color/gold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/j2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/j1"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="5dp"

        android:fontFamily="sans-serif"
        android:text="@string/solicit_your_gracious_presence"
        android:textColor="@color/gold"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/j3"
        android:layout_below="@id/j2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="5dp"
        android:fontFamily="sans-serif"
        android:text="ON THE AUSPICIOUS OCCASION OF THE"
        android:textColor="@color/gold"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/j4"
        android:layout_below="@id/j3"
        android:layout_marginVertical="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"

        android:text="MARRIAGE CEREMONY"
        android:textColor="@color/gold"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/j5"
        android:layout_below="@id/j4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="5dp"
        android:text="OF THEIR BELOVED SON"
        android:fontFamily="sans-serif"
        android:textColor="@color/gold"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/j6"
        android:layout_below="@id/j5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:fontFamily="sans-serif-black"
        android:text="ADITYA   WITH    MEGHNA"
        android:textColor="@color/gold"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/j7"
        android:layout_below="@id/j6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:fontFamily="sans-serif"
        android:text="DAUGHTER OF"
        android:textColor="@color/gold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/j8"
        android:layout_below="@id/j7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:fontFamily="sans-serif-black"
        android:text="MRS MADHVI AND MR.SURESH RAJ"
        android:textColor="@color/gold"
        android:textSize="18sp" />


    <Button
        android:id="@+id/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginVertical="5dp"
        android:layout_below="@id/j8"


       android:layout_centerInParent="true"
        android:background="@drawable/button_rounded"
        android:onClick="Event"
        android:text="Event" />
    <Button
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/event"
        android:layout_centerInParent="true"
        android:layout_marginVertical="5dp"

        android:background="@drawable/button_rounded"
        android:onClick="Contact"
        android:text="CONTACT" />

</RelativeLayout>